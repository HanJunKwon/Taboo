<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Taboo"/>

    <style name="Taboo.TextAppearance"/>

    <style name="Taboo.TextAppearance.Button">
        <item name="android:fontFamily">@font/font_pretendard_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Taboo.TextAppearance.IconButton">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/taboo_black_01</item>
    </style>

    <style name="Taboo.TextAppearance.RadioButton">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/taboo_black_01</item>
    </style>

    <style name="Taboo.TextAppearance.PreviewButton.Title" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/taboo_black_01</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Taboo.TextAppearance.PreviewButton.Description" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textColor">@color/taboo_black_03</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.PreviewButton.Preview" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textColor">@color/taboo_blue_01</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Title" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textColor">@color/taboo_black_01</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Content" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/taboo_black_01</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Hint" parent="Taboo.TextAppearance">
        <item name="android:textColor">@color/taboo_gray_02</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Affix" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/taboo_edit_text_prefix_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.Calender"/>

    <style name="Taboo.TextAppearance.Calender.Day">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textColor">@color/selector_taboo_horizontal_calendar_item_day</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Taboo.TextAppearance.Calender.Day.Selected">
        <item name="android:textColor">@color/taboo_gray_05</item>
    </style>

    <style name="Taboo.TextAppearance.Calender.Date">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/selector_taboo_horizontal_calendar_item_date</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Taboo.TextAppearance.Calender.Date.Selected">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Taboo.TextAppearance.NumberingBall">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/selector_taboo_numbering_ball_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.Style"/>

    <style name="Taboo.Style.Button">
        <item name="android:padding">15dp</item>
    </style>

    <style name="Taboo.Style.Button.Rect">
        <item name="android:background">@drawable/shape_rect_r0_a100_1731e9</item>
    </style>

    <style name="Taboo.Style.Button.Round">
        <item name="android:background">@drawable/shape_rect_r15_a100_1731e9</item>
    </style>

    <style name="Taboo.Style.IconButton">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">19dp</item>
    </style>

    <style name="Taboo.Style.PreviewButton">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">19dp</item>
    </style>

    <style name="Taboo.Style.ImageView">
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="Taboo.Style.ImageView.Back">
        <item name="android:src">@drawable/ic_round_arrow_back_191f28_24dp</item>
    </style>

    <style name="Taboo.Style.ImageView.Forward">
        <item name="android:src">@drawable/ic_round_arrow_forward_191f28_24dp</item>
    </style>

    <style name="Taboo.Style.ImageView.PreviewButton">
        <item name="android:src">@drawable/ic_round_arrow_forward_8b95a1_24dp</item>
    </style>

    <style name="Taboo.Style.TabooEditText"/>

    <style name="Taboo.Style.TabooEditText.Prefix">
        <item name="android:textAppearance">@style/Taboo.TextAppearance.TabooEditText.Affix</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="Taboo.Style.TabooEditText.Suffix">
        <item name="android:textAppearance">@style/Taboo.TextAppearance.TabooEditText.Affix</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="Taboo.Style.TabooEditText.Content">
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/Taboo.TextAppearance.TabooEditText.Content</item>
        <item name="android:textColorHint">@color/taboo_gray_02</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="Taboo.Style.Calender"/>

    <style name="Taboo.Style.Calender.Horizontal">
        <item name="android:background">@drawable/shape_rect_r10_a100_294af6</item>
    </style>

    <style name="Taboo.Style.Calender.Horizontal.Selected">
        <item name="android:background">@null</item>
    </style>

</resources>