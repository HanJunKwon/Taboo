<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadiosActivity">

    <com.kwon.taboo.radio.TabooRadioButtonGroup
        android:id="@+id/rg_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@id/rb_radio_1">

        <com.kwon.taboo.radio.TabooRadioButton
            android:id="@+id/rb_radio_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:label="Radio 1"/>

        <com.kwon.taboo.radio.TabooRadioButton
            android:id="@+id/rb_radio_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            app:label="Radio 2"/>

    </com.kwon.taboo.radio.TabooRadioButtonGroup>

</androidx.constraintlayout.widget.ConstraintLayout>