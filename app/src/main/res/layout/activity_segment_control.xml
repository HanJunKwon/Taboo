<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SegmentControlActivity">

    <com.kwon.taboo.segment.TabooSegmentControl
        android:id="@+id/tsc_segment_control_outline_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:segmentType="outline"/>

    <com.kwon.taboo.segment.TabooSegmentControl
        android:id="@+id/tsc_segment_control_solid_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:segmentType="solid"/>

    <com.kwon.taboo.segment.TabooSegmentTab
        android:id="@+id/tst_segment_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <com.kwon.taboo.segment.TabooSegmentTab
        android:id="@+id/tst_segment_tab_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:tabFontFamily="@font/font_pretendard_bold" />

</LinearLayout>