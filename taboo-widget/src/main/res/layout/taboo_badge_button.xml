<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_button_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    style="@style/Taboo.Style.Button">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.kwon.taboo.numbering.TabooNumberingBall
            android:id="@+id/numbering_ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/taboo_blue_700"
            app:ballColor="@color/white"/>

        <TextView
            android:id="@+id/tv_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_default_text"
            android:layout_marginStart="14dp"
            style="@style/Taboo.TextAppearance.Button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>