<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_taboo_slide_toast"
    android:paddingVertical="10dp"
    android:paddingHorizontal="24dp"
    android:minHeight="68dp">
    
    <ImageView
        android:id="@+id/iv_toast_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_toast_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_pretendard_bold"
        android:textAppearance="@style/Taboo.TextAppearance.SlideToast"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        app:layout_goneMarginStart="0dp"
        app:layout_constraintStart_toEndOf="@+id/iv_toast_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="고장 수리를 접수하였습니다."/>

</androidx.constraintlayout.widget.ConstraintLayout>