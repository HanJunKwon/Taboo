<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Taboo.TextAppearance.Button">
        <item name="android:fontFamily">@font/font_pretendard_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Taboo.TextAppearance.IconButton">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="Taboo.TextAppearance.PreviewButton.Title" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Taboo.TextAppearance.PreviewButton.Description" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.PreviewButton.Preview" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textColor">@color/taboo_preview_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Title" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textColor">@color/selector_taboo_edit_text_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Content" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/taboo_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Hint" parent="Taboo.TextAppearance">
        <item name="android:textColor">@color/taboo_gray_400</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Affix" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/taboo_edit_text_prefix_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.TabooEditText.Error" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/taboo_red_500</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Taboo.TextAppearance.Calender"/>

    <style name="Taboo.TextAppearance.Calender.Day">
        <item name="android:fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textColor">@color/selector_taboo_horizontal_calendar_item_day</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Taboo.TextAppearance.Calender.Day.Selected">
        <item name="android:textColor">@color/taboo_gray_50</item>
    </style>

    <style name="Taboo.TextAppearance.Calender.Date">
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textColor">@color/selector_taboo_horizontal_calendar_item_date</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Taboo.TextAppearance.Calender.Date.Selected">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Taboo.TextAppearance.Timer.RemainTime" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_light</item>
        <item name="android:textColor">@color/selector_taboo_timer_time</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Taboo.TextAppearance.Timer.SettingTime" parent="Taboo.TextAppearance">
        <item name="android:fontFamily">@font/font_pretendard_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Taboo.TextAppearance.SlideToast">
        <item name="android:fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Taboo.Style"/>

    <style name="Taboo.Style.Button">
        <item name="android:padding">15dp</item>
    </style>

    <style name="Taboo.Style.PrimaryButton">
        <item name="primaryColor">@color/taboo_blue_700</item>
        <item name="secondaryColor">@color/taboo_blue_100</item>
    </style>

    <style name="Taboo.Style.PrimaryButton.Round">
        <item name="buttonShape">round</item>
    </style>

    <style name="Taboo.Style.PrimaryButton.Round.Solid">
        <item name="buttonType">solid</item>
    </style>

    <style name="Taboo.Style.PrimaryButton.Round.Fill">
        <item name="buttonType">fill</item>
    </style>

    <style name="Taboo.Style.PrimaryButton.Round.Outline">
        <item name="buttonType">outline</item>
    </style>

    <style name="Taboo.Style.PrimaryButton.Round.Dash">
        <item name="buttonType">dash</item>
    </style>

    <style name="Taboo.Style.SecondaryButton">
        <item name="primaryColor">@color/white</item>
        <item name="secondaryColor">@android:color/transparent</item>
    </style>

    <style name="Taboo.Style.SecondaryButton.Round">
        <item name="buttonShape">round</item>
    </style>

    <style name="Taboo.Style.SecondaryButton.Round.Solid">
        <item name="buttonType">solid</item>
    </style>

    <style name="Taboo.Style.SecondaryButton.Round.Fill">
        <item name="buttonType">fill</item>
    </style>

    <style name="Taboo.Style.SecondaryButton.Round.Outline">
        <item name="buttonType">outline</item>
    </style>

    <style name="Taboo.Style.SecondaryButton.Round.Dash">
        <item name="buttonType">dash</item>
    </style>

    <style name="Taboo.Style.IconButton">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">19dp</item>
    </style>

    <style name="Taboo.Style.PreviewButton">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">19dp</item>
    </style>

    <style name="Taboo.Style.ImageView">
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="Taboo.Style.ImageView.Back">
        <item name="android:src">@drawable/ic_round_arrow_back_e6e0e9_24dp</item>
    </style>

    <style name="Taboo.Style.ImageView.Forward">
        <item name="android:src">@drawable/ic_round_arrow_back_e6e0e9_24dp</item>
    </style>

    <style name="Taboo.Style.ImageView.PreviewButton">
        <item name="android:src">@drawable/ic_round_arrow_forward_cac4d0_24dp</item>
    </style>

    <style name="Taboo.Style.Confirm" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/surface</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

</resources>