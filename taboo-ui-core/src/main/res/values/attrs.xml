<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="animationDuration" format="integer"/>
    <attr name="enabledAnimation" format="boolean"/>
    <attr name="scaleAnimationRatio" format="float"/>
    <attr name="enabledVibration" format="boolean"/>
    <attr name="vibrationDuration" format="integer"/>

    <declare-styleable name="TabooClickableViewCore">
        <attr name="enabledAnimation"/>
        <attr name="animationDuration"/>
        <attr name="scaleAnimationRatio"/>
        <attr name="enabledVibration"/>
        <attr name="vibrationDuration"/>
    </declare-styleable>

    <declare-styleable name="TabooButtonCore"/>

    <declare-styleable name="TabooNavigationCore">
        <attr name="menu" format="reference"/>
        <attr name="menuItemPrimaryColor" format="reference|color"/>
        <attr name="menuItemSecondaryColor" format="reference|color"/>
        <attr name="strokeColor" format="reference|color"/>
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TabooFadeView">
        <attr name="startColor" format="reference|color"/>
        <attr name="endColor" format="reference|color"/>
        <attr name="fadeOrientation" format="enum">
            <enum name="top_bottom" value="0"/>
            <enum name="bottom_top" value="1"/>
            <enum name="left_right" value="2"/>
            <enum name="right_left" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TabooFadeLayout">
        <attr name="fadePosition" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="both" value="2"/>
        </attr>
        <attr name="fadeHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TabooTranslateLayout">
        <attr name="animationDuration"/>
        <attr name="translationDirection" format="enum">
            <enum name="bottomUp" value="0"/>
            <enum name="topDown" value="1"/>
            <enum name="leftRight" value="2"/>
            <enum name="rightLeft" value="3"/>
        </attr>
        <attr name="fromDelta" format="float"/>
        <attr name="toDelta" format="float"/>
    </declare-styleable>

    <declare-styleable name="TabooMenuItem">
        <attr name="android:id"/>
        <attr name="android:title"/>
        <attr name="android:titleTextColor"/>
        <attr name="android:icon"/>
        <attr name="iconColor" format="reference|color"/>
    </declare-styleable>

</resources>